@page

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Food Delivery</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <link rel="stylesheet" href="styles.css">
</head>
<body class="bg-gray-100">
    <header class="navbar bg-white py-4 px-6">
        <div class="container mx-auto">
            <div class="flex items-center justify-between">
                <a href="#" class="text-3xl font-bold text-white">Deliveroo</a>
                <nav class="hidden md:block">
                    <ul class="flex space-x-6">
                        <li>
                            <a href="#" class="text-white hover:text-gray-300">Home</a>
                        </li>
                        <li>
                            <a href="#" class="text-white hover:text-gray-300">Restaurants</a>
                        </li>
                        <li>
                            <a href="#" class="text-white hover:text-gray-300">How It Works</a>
                        </li>
                        <li>
                            <a class="text-white hover:text-gray-300" id="login" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
                        </li>
                    </ul>
                </nav>
                <a href="#" class="bg-red-600 text-white px-4 py-2 rounded">Sign Up</a>
            </div>
        </div>
    </header>



    <section class="hero bg-cover bg-center py-32" style="background-image: url('https://images.pexels.com/photos/687824/pexels-photo-687824.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); margin-top: -4rem; padding-top: 8rem; ">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-5xl font-bold text-white mb-8">Delicious Food Delivered to Your Doorstep</h1>
            <p class="text-xl text-white mb-12">Discover local restaurants and order your favorite meals with ease</p>
            <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-full font-bold">Get Started</a>
        </div>
    </section>

    <section class="popular-restaurants py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12">Popular Restaurants Near You</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="restaurant-card bg-white rounded overflow-hidden shadow-lg">
                    <img src="restaurant1.jpg" alt="Restaurant 1" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-bold mb-2">Restaurant 1</h3>
                        <p class="text-gray-700 mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec elementum.</p>
                        <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-full font-bold">View Menu</a>
                    </div>
                </div>
                <div class="restaurant-card bg-white rounded overflow-hidden shadow-lg">
                    <img src="restaurant2.jpg" alt="Restaurant 2" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-bold mb-2">Restaurant 2</h3>
                        <p class="text-gray-700 mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec elementum.</p>
                        <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-full font-bold">View Menu</a>
                    </div>
                </div>
                <div class="restaurant-card bg-white rounded overflow-hidden shadow-lg">
                    <img src="restaurant3.jpg" alt="Restaurant 3" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-bold mb-2">Restaurant 3</h3>
                        <p class="text-gray-700 mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec elementum.</p>
                        <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-full font-bold">View Menu</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="how-it-works py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12">How It Works</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <div class="flex flex-col items-center">
                    <img src="/images/foodie.png" alt="Step 1" class="h-20 mb-4">
                    <h3 class="text-xl font-bold mb-2">Choose Your Food</h3>
                    <p class="text-gray-700 text-center">Browse through a wide selection of restaurants and cuisines to find your desired meal.</p>
                </div>
                <div class="flex flex-col items-center">
                    <img src="/images/Order.png" alt="Step 2" class="h-20 mb-4">
                    <h3 class="text-xl font-bold mb-2">Place Your Order</h3>
                    <p class="text-gray-700 text-center">Customize your order and proceed to checkout. Review your order details and confirm.</p>
                </div>
                <div class="flex flex-col items-center">
                    <img src="/images/relax.png" alt="Step 3" class="h-20 mb-4">
                    <h3 class="text-xl font-bold mb-2">Sit Back and Relax</h3>
                    <p class="text-gray-700 text-center">Track your order in real-time and wait for the delicious food to be delivered right to your doorstep.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Rest of the content -->

    <footer class="bg-gray-900 text-white py-6">
        <div class="container mx-auto px-4">
            <p>&copy; 2023 Food Delivery. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
